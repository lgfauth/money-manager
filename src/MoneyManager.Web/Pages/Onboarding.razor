@page "/onboarding"
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager Navigation
@inject MoneyManager.Web.Services.IOnboardingService OnboardingService

<PageTitle>Bem-vindo ao MoneyManager!</PageTitle>

<div class="onboarding-container">
    <div class="onboarding-header text-center mb-5">
        <h1 class="display-4 mb-3">
            <i class="fas fa-rocket text-primary"></i>
            Bem-vindo ao MoneyManager!
        </h1>
        <p class="lead text-muted">
            Vamos configurar sua conta em poucos passos simples
        </p>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-5 text-center">
            <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
            <h2 class="mt-4 mb-3">Conta Criada com Sucesso!</h2>
            <p class="text-muted mb-4">
                Sua conta foi criada. Agora você pode começar a usar o MoneyManager!
            </p>
            <div class="d-grid gap-3">
                <button class="btn btn-primary btn-lg" @onclick="@(() => Navigation.NavigateTo("/accounts"))">
                    <i class="fas fa-wallet"></i> Criar Primeira Conta
                </button>
                <button class="btn btn-outline-primary btn-lg" @onclick="@(() => Navigation.NavigateTo("/categories"))">
                    <i class="fas fa-tags"></i> Criar Categorias
                </button>
                <button class="btn btn-outline-secondary btn-lg" @onclick="CompleteOnboarding">
                    <i class="fas fa-home"></i> Ir para Dashboard
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .onboarding-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
    }

    .onboarding-header h1 {
        font-weight: 700;
    }
</style>

@code {
    private async Task CompleteOnboarding()
    {
        try
        {
            await OnboardingService.CompleteOnboardingAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao completar onboarding: {ex.Message}");
        }
        finally
        {
            Navigation.NavigateTo("/dashboard");
        }
    }
}
