@page "/accounts"
@using MoneyManager.Domain.Entities
@using MoneyManager.Domain.Enums
@using MoneyManager.Application.DTOs.Request
@using MoneyManager.Application.DTOs.Response
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@attribute [Authorize]
@inject IAccountService AccountService
@inject ITransactionService TransactionService
@inject MoneyManager.Application.Services.ICreditCardInvoiceService InvoiceService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IJSRuntime JSRuntime

<PageTitle>Contas - MoneyManager</PageTitle>

<BusyOverlay IsBusy="@isBusy" Message="Processando..." />

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-wallet text-primary"></i> Contas Bancárias
                </h1>
                <button class="btn btn-primary" @onclick="ShowAddModal">
                    <i class="fas fa-plus"></i> Nova Conta
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 col-md-4">
            <label class="form-label">Ordenar por</label>
            <select class="form-select" @bind="accountsSort" @bind:after="OnAccountsSortChanged">
                <option value="type">Tipo</option>
                <option value="name">Nome</option>
                <option value="balance_desc">Saldo (maior primeiro)</option>
                <option value="balance_asc">Saldo (menor primeiro)</option>
            </select>
        </div>
    </div>

    @if (showAdd)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5>Nova Conta</h5>
                @if (!string.IsNullOrEmpty(addError))
                {
                    <div class="alert alert-danger">@addError</div>
                }
                <div class="row g-2">
                    <div class="col-12 col-md-4">
                        <input class="form-control" placeholder="Nome da conta" @bind="newAccount.Name" />
                    </div>
                    <div class="col-12 col-md-3">
                        <select class="form-select text-dark" @bind="newAccount.Type">
                            <option value="@AccountType.Checking">Conta Corrente</option>
                            <option value="@AccountType.Savings">Poupança</option>
                            <option value="@AccountType.Cash">Dinheiro</option>
                            <option value="@AccountType.CreditCard">Cartão de Crédito</option>
                            <option value="@AccountType.Investment">Investimento</option>
                        </select>
                    </div>
                    @if (newAccount.Type == AccountType.CreditCard)
                    {
                        <div class="col-12 col-md-3">
                            <label class="form-label">Fechamento da fatura (dia)</label>
                            <input type="number" class="form-control" min="1" max="31" @bind="newAccount.InvoiceClosingDay" />
                            <small class="text-muted">Ex.: 9 (as parcelas entram no dia 10).</small>
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Limite de crédito (R$)</label>
                            <input type="number" step="0.01" class="form-control" @bind="creditLimitInput" placeholder="0,00" />
                            <small class="text-muted">Deixe em branco se não quiser limite.</small>
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Dias até vencimento</label>
                            <input type="number" class="form-control" min="1" max="30" @bind="newAccount.InvoiceDueDayOffset" />
                            <small class="text-muted">Dias entre fechamento e vencimento (padrão: 7).</small>
                        </div>
                    }
                    <div class="col-12 col-md-@(newAccount.Type == AccountType.CreditCard ? "12" : "3")">
                        <MoneyInput @bind-Value="newAccount.InitialBalance" Placeholder="Saldo inicial" Disabled="@(!string.IsNullOrEmpty(editingAccountId))" />
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="d-flex flex-column flex-md-row gap-2 justify-content-end">
                            <button class="btn btn-success" @onclick="CreateAccount">Salvar</button>
                            <button class="btn btn-link text-danger" @onclick="CancelAdd">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando contas...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (accounts != null && accounts.Any())
    {
        <div class="row g-4">
            @foreach (var account in GetAccountsSorted(accounts))
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@account.Name</h5>
                            <div class="mb-3">
                                <p class="text-muted small mb-2">Saldo</p>
                                <h3 class="text-primary mb-0">R$ @account.Balance.ToString("F2")</h3>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Tipo: @GetAccountTypeLabel(account.Type)</small><br/>
                                <small class="text-muted">Saldo Inicial: R$ @account.InitialBalance.ToString("F2")</small>
                                @if (account.Type == AccountType.CreditCard && account.InvoiceClosingDay.HasValue)
                                {
                                    <br />
                                    <small class="text-muted">Fechamento: dia @account.InvoiceClosingDay</small>
                                    <br />
                                    <small class="text-muted">Vencimento: @account.InvoiceDueDayOffset dias após fechamento</small>
                                    @if (account.CreditLimit.HasValue)
                                    {
                                        var used = Math.Abs(account.Balance);
                                        var available = account.CreditLimit.Value - used;
                                        <br />
                                        <small class="text-muted">Limite: R$ @account.CreditLimit.Value.ToString("F2")</small>
                                        <br />
                                        <small class="text-muted">Disponível: R$ @available.ToString("F2")</small>
                                    }
                                }
                            </div>
                            <div class="d-grid gap-2">
                                @if (account.Type == AccountType.CreditCard)
                                {
                                    <button class="btn btn-sm btn-primary" @onclick="() => ShowPayInvoice(account)">
                                        <i class="fas fa-file-invoice-dollar"></i> Pagar Fatura
                                    </button>
                                }
                                <button class="btn btn-sm btn-warning" @onclick="() => BeginEditAccount(account.Id)">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteAccount(account.Id)" disabled="@isBusy">
                                    <i class="fas fa-trash"></i> Deletar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

    @if (showPayInvoice)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-file-invoice-dollar"></i> Faturas Pendentes - @selectedCard?.Name
                        </h5>
                        <button type="button" class="btn-close" @onclick="CancelPayInvoice" disabled="@isBusy"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(invoiceError))
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <i class="fas fa-exclamation-triangle"></i> @invoiceError
                                <button type="button" class="btn-close" @onclick="() => invoiceError = null"></button>
                            </div>
                        }

                        @if (isLoadingInvoices)
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Carregando faturas...</span>
                                </div>
                                <p class="mt-3 text-muted">Carregando faturas pendentes...</p>
                            </div>
                        }
                        else if (pendingInvoices == null || !pendingInvoices.Any())
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> Nenhuma fatura pendente! Todas as faturas estão pagas.
                            </div>
                        }
                        else
                        {
                            <div class="row g-3">
                                @foreach (var invoice in pendingInvoices.OrderBy(i => i.DueDate))
                                {
                                    var isOverdue = invoice.DueDate < DateTime.Today && invoice.Status != InvoiceStatus.Paid;
                                    var statusClass = GetInvoiceStatusBadgeClass(invoice.Status, isOverdue);
                                    
                                    <div class="col-12">
                                        <div class="card @(isOverdue ? "border-danger" : "")">
                                            <div class="card-body">
                                                <div class="row align-items-center">
                                                    <div class="col-md-3">
                                                        <h6 class="mb-1">
                                                            <i class="fas fa-calendar"></i> Fatura @invoice.ReferenceMonth
                                                        </h6>
                                                        <small class="text-muted">
                                                            Período: @invoice.PeriodStart.ToString("dd/MM") a @invoice.PeriodEnd.ToString("dd/MM/yyyy")
                                                        </small>
                                                        <br />
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock"></i> Vencimento: @invoice.DueDate.ToString("dd/MM/yyyy")
                                                        </small>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <p class="mb-1 text-muted small">Valor Total</p>
                                                        <h5 class="mb-0 text-danger">R$ @invoice.TotalAmount.ToString("F2")</h5>
                                                        @if (invoice.PaidAmount > 0)
                                                        {
                                                            <small class="text-success">
                                                                <i class="fas fa-check"></i> Pago: R$ @invoice.PaidAmount.ToString("F2")
                                                            </small>
                                                            <br />
                                                            <small class="text-danger">
                                                                <i class="fas fa-exclamation-circle"></i> Restante: R$ @invoice.RemainingAmount.ToString("F2")
                                                            </small>
                                                        }
                                                    </div>
                                                    <div class="col-md-2">
                                                        <span class="badge @statusClass">
                                                            @GetInvoiceStatusLabel(invoice.Status, isOverdue)
                                                        </span>
                                                        <br />
                                                        @if (!isOverdue && invoice.DaysUntilDue >= 0)
                                                        {
                                                            <small class="text-muted">
                                                                <i class="fas fa-hourglass-half"></i> Vence em @invoice.DaysUntilDue dias
                                                            </small>
                                                        }
                                                        else if (isOverdue)
                                                        {
                                                            <small class="text-danger">
                                                                <i class="fas fa-exclamation-triangle"></i> Vencida há @Math.Abs(invoice.DaysUntilDue) dias
                                                            </small>
                                                        }
                                                    </div>
                                                    <div class="col-md-2 text-center">
                                                        <small class="text-muted">Transações</small>
                                                        <br />
                                                        <strong><i class="fas fa-receipt"></i> @invoice.TransactionCount</strong>
                                                    </div>
                                                    <div class="col-md-2 d-grid gap-2">
                                                        <button class="btn btn-primary btn-sm" @onclick="() => SelectInvoiceToPay(invoice)" disabled="@isBusy">
                                                            <i class="fas fa-money-bill-wave"></i> Pagar
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @if (selectedInvoiceToPay != null)
                        {
                            <hr class="my-4" />
                            <div class="card bg-light border-primary">
                                <div class="card-body">
                                    <h6 class="mb-3">
                                        <i class="fas fa-credit-card"></i> Pagamento da Fatura @selectedInvoiceToPay.ReferenceMonth
                                    </h6>
                                    <div class="row g-3">
                                        <div class="col-md-4">
                                            <label class="form-label">Data do Pagamento</label>
                                            <input type="date" class="form-control" @bind="invoicePaymentDate" />
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Conta que vai pagar</label>
                                            <select class="form-select" @bind="payFromAccountId">
                                                <option value="">-- Selecione --</option>
                                                @foreach (var a in accountsListForPay.Where(a => a.Type != AccountType.CreditCard))
                                                {
                                                    <option value="@a.Id">@a.Name (@GetAccountTypeLabel(a.Type))</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Valor do Pagamento</label>
                                            <MoneyInput @bind-Value="invoicePaymentAmount" Placeholder="0,00" />
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle"></i> Restante: R$ @selectedInvoiceToPay.RemainingAmount.ToString("F2")
                                            </small>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex gap-2 justify-content-end">
                                                <button class="btn btn-success" @onclick="ConfirmInvoicePayment" disabled="@isBusy">
                                                    <i class="fas fa-check"></i> 
                                                    @if (invoicePaymentAmount >= selectedInvoiceToPay.RemainingAmount)
                                                    {
                                                        <text>Pagar Totalmente</text>
                                                    }
                                                    else
                                                    {
                                                        <text>Pagar Parcialmente</text>
                                                    }
                                                </button>
                                                <button class="btn btn-secondary" @onclick="() => selectedInvoiceToPay = null" disabled="@isBusy">
                                                    <i class="fas fa-times"></i> Cancelar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelPayInvoice" disabled="@isBusy">
                            <i class="fas fa-times"></i> Fechar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Nenhuma conta encontrada. <a href="#" @onclick="ShowAddModal">Clique aqui para criar uma.</a>
        </div>
    }
</div>

@code {
    private string userId = string.Empty;
    private IEnumerable<Account>? accounts;
    private bool isLoading = true;
    private string? errorMessage;

    private List<Account> accountsListForPay = new();

    private const string AccountsSortStorageKey = "mm.accounts.sort";
    private string accountsSort = "type";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
        
        await LoadAccountsSortPreference();
        await LoadAccounts();
    }

    private async Task LoadAccountsSortPreference()
    {
        try
        {
            var v = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", AccountsSortStorageKey);
            if (!string.IsNullOrWhiteSpace(v))
            {
                accountsSort = v;
            }
        }
        catch
        {
            // ignore
        }
    }

    private async Task OnAccountsSortChanged()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", AccountsSortStorageKey, accountsSort);
        }
        catch
        {
            // ignore
        }

        StateHasChanged();
    }

    private async Task LoadAccounts()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            accounts = await AccountService.GetAllAsync();
            accountsListForPay = (accounts ?? Enumerable.Empty<Account>()).ToList();
            if (accounts == null || !accounts.Any())
            {
                errorMessage = "Nenhuma conta disponível.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar contas: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ShowAddModal()
    {
        showAdd = true;
        newAccount = new Account { InvoiceDueDayOffset = 7 };
        creditLimitInput = null;
        await Task.Yield();
        StateHasChanged();
    }

    private bool showAdd;
    private Account newAccount = new Account { InvoiceDueDayOffset = 7 };
    private decimal? creditLimitInput;
    private string? addError;
    private string? editingAccountId;
    private decimal? editingOriginalInitialBalance;
    private bool isBusy;

    private bool showPayInvoice;
    private Account? selectedCard;
    private string? payFromAccountId;
    private decimal invoicePaymentAmount;
    private DateTime invoicePaymentDate = DateTime.Today;
    private string? invoiceError;
    
    // Invoice payment variables
    private bool isLoadingInvoices;
    private List<CreditCardInvoiceResponseDto>? pendingInvoices;
    private CreditCardInvoiceResponseDto? selectedInvoiceToPay;

    private async Task BeginEditAccount(string id)
    {
        try
        {
            var acc = await AccountService.GetByIdAsync(id);
            if (acc != null)
            {
                newAccount = acc;
                editingAccountId = id;
                editingOriginalInitialBalance = acc.InitialBalance;
                creditLimitInput = acc.CreditLimit;
                showAdd = true;
                await Task.Yield();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
    }

    private async Task ShowPayInvoice(Account creditCard)
    {
        selectedCard = creditCard;
        showPayInvoice = true;
        invoiceError = null;
        payFromAccountId = string.Empty;
        invoicePaymentDate = DateTime.Today;
        selectedInvoiceToPay = null;
        
        await LoadPendingInvoices();
    }

    private void CancelPayInvoice()
    {
        if (isBusy) return;
        showPayInvoice = false;
        selectedCard = null;
        payFromAccountId = null;
        invoiceError = null;
        selectedInvoiceToPay = null;
        pendingInvoices = null;
    }

    private static string GetAccountTypeLabel(AccountType type)
    {
        return type switch
        {
            AccountType.Checking => "Conta Corrente",
            AccountType.Savings => "Poupança",
            AccountType.Cash => "Dinheiro",
            AccountType.CreditCard => "Cartão de Crédito",
            AccountType.Investment => "Investimento",
            _ => type.ToString()
        };
    }

    private static int GetAccountTypeSortKey(AccountType type)
    {
        return type switch
        {
            AccountType.Cash => 0,
            AccountType.Checking => 1,
            AccountType.Savings => 2,
            AccountType.CreditCard => 3,
            AccountType.Investment => 4,
            _ => 99
        };
    }

    private IEnumerable<Account> GetAccountsSorted(IEnumerable<Account>? list)
    {
        if (list is null) return Enumerable.Empty<Account>();

        return accountsSort switch
        {
            "name" => list.OrderBy(a => a.Name),
            "balance_asc" => list.OrderBy(a => a.Balance),
            "balance_desc" => list.OrderByDescending(a => a.Balance),
            _ => list.OrderBy(a => GetAccountTypeSortKey(a.Type)).ThenBy(a => a.Name)
        };
    }

    private async Task DeleteAccount(string id)
    {
        if (isBusy) return;
        isBusy = true;
        try
        {
            await AccountService.DeleteAsync(id);
            await LoadAccounts();
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private async Task CreateAccount()
    {
        addError = null;
        if (isBusy) return;
        isBusy = true;
        try
        {
            // Sincronizar creditLimitInput com newAccount
            newAccount.CreditLimit = creditLimitInput;

            if (!string.IsNullOrEmpty(editingAccountId))
            {
                // Editing: do not allow changing initial balance/balance here.
                if (editingOriginalInitialBalance.HasValue)
                {
                    newAccount.InitialBalance = editingOriginalInitialBalance.Value;
                }
                await AccountService.UpdateAsync(editingAccountId, newAccount);
                editingAccountId = null;
                editingOriginalInitialBalance = null;
            }
            else
            {
                newAccount.Balance = newAccount.InitialBalance;
                var created = await AccountService.CreateAsync(newAccount);
            }
            newAccount = new Account { InvoiceDueDayOffset = 7 };
            creditLimitInput = null;
            showAdd = false;
            await LoadAccounts();
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private void CancelAdd()
    {
        if (isBusy) return;
        showAdd = false;
        newAccount = new Account { InvoiceDueDayOffset = 7 };
        creditLimitInput = null;
        addError = null;
        editingAccountId = null;
        editingOriginalInitialBalance = null;
    }

    private async Task LoadPendingInvoices()
    {
        if (selectedCard == null) return;
        
        isLoadingInvoices = true;
        try
        {
            var allInvoices = await InvoiceService.GetInvoicesByAccountAsync(userId, selectedCard.Id);
            pendingInvoices = allInvoices
                .Where(i => i.Status != InvoiceStatus.Paid)
                .OrderBy(i => i.DueDate)
                .ToList();
        }
        catch (Exception ex)
        {
            invoiceError = $"Erro ao carregar faturas: {ex.Message}";
            pendingInvoices = new List<CreditCardInvoiceResponseDto>();
        }
        finally
        {
            isLoadingInvoices = false;
        }
    }

    private void SelectInvoiceToPay(CreditCardInvoiceResponseDto invoice)
    {
        selectedInvoiceToPay = invoice;
        invoicePaymentAmount = invoice.RemainingAmount;
        payFromAccountId = string.Empty;
        invoicePaymentDate = DateTime.Today;
    }

    private async Task ConfirmInvoicePayment()
    {
        if (selectedInvoiceToPay == null) return;
        
        invoiceError = null;
        if (isBusy) return;
        isBusy = true;

        try
        {
            if (string.IsNullOrWhiteSpace(payFromAccountId))
            {
                invoiceError = "Selecione a conta que realizará o pagamento";
                return;
            }

            if (invoicePaymentAmount <= 0)
            {
                invoiceError = "Informe um valor maior que zero";
                return;
            }

            if (invoicePaymentAmount > selectedInvoiceToPay.RemainingAmount)
            {
                invoiceError = $"Valor do pagamento não pode exceder o valor restante (R$ {selectedInvoiceToPay.RemainingAmount:F2})";
                return;
            }

            var request = new PayInvoiceRequestDto
            {
                InvoiceId = selectedInvoiceToPay.Id,
                PayFromAccountId = payFromAccountId,
                Amount = invoicePaymentAmount,
                PaymentDate = invoicePaymentDate,
                Description = $"Pagamento fatura {selectedInvoiceToPay.ReferenceMonth}"
            };

            // Determinar se é pagamento total ou parcial
            if (invoicePaymentAmount >= selectedInvoiceToPay.RemainingAmount)
            {
                await InvoiceService.PayInvoiceAsync(userId, request);
            }
            else
            {
                await InvoiceService.PayPartialInvoiceAsync(userId, request);
            }

            // Recarregar dados
            await LoadPendingInvoices();
            await LoadAccounts();
            
            selectedInvoiceToPay = null;
            
            // Se não há mais faturas pendentes, fechar modal
            if (pendingInvoices == null || !pendingInvoices.Any())
            {
                showPayInvoice = false;
            }
        }
        catch (Exception ex)
        {
            invoiceError = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private static string GetInvoiceStatusBadgeClass(InvoiceStatus status, bool isOverdue)
    {
        if (isOverdue) return "bg-danger";
        
        return status switch
        {
            InvoiceStatus.Open => "bg-info",
            InvoiceStatus.Closed => "bg-warning text-dark",
            InvoiceStatus.Paid => "bg-success",
            InvoiceStatus.PartiallyPaid => "bg-warning text-dark",
            InvoiceStatus.Overdue => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private static string GetInvoiceStatusLabel(InvoiceStatus status, bool isOverdue)
    {
        if (isOverdue) return "VENCIDA";
        
        return status switch
        {
            InvoiceStatus.Open => "Aberta",
            InvoiceStatus.Closed => "Fechada",
            InvoiceStatus.Paid => "Paga",
            InvoiceStatus.PartiallyPaid => "Parc. Paga",
            InvoiceStatus.Overdue => "Vencida",
