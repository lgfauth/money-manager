@page "/budgets"
@using MoneyManager.Domain.Entities
@using MoneyManager.Domain.Enums
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IBudgetService BudgetService
@inject ICategoryService CategoryService

<PageTitle>OrÃ§amentos - MoneyManager</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-calculator text-primary"></i> OrÃ§amentos
                </h1>
                <button type="button" class="btn btn-primary" @onclick="ShowAddModal">
                    <i class="fas fa-plus"></i> Novo OrÃ§amento
                </button>
            </div>
        </div>
    </div>

    @if (showAdd)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5>Novo OrÃ§amento</h5>
                @if (!string.IsNullOrEmpty(addError))
                {
                    <div class="alert alert-danger">@addError</div>
                }
                <div class="row g-2">
                    <div class="col-md-3">
                        <input type="month" class="form-control" value="@monthPicker" @onchange="OnMonthChanged" />
                    </div>
                    <div class="col-md-4">
                        <select class="form-select" multiple @bind="selectedCategoryIds">
                            @if (categoriesList != null)
                            {
                                @foreach (var c in categoriesList)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <MoneyInput @bind-Value="newItem.LimitAmount" Placeholder="Limite" />
                    </div>
                    <div class="col-md-3 d-grid">
                        <div class="d-flex">
                            <button type="button" class="btn btn-success me-2" @onclick="AddBudgetItem">Adicionar Item(s)</button>
                            <button type="button" class="btn btn-primary me-2" @onclick="CreateBudget">Salvar OrÃ§amento</button>
                            <button type="button" class="btn btn-link text-danger" @onclick="CancelAdd">Cancelar</button>
                        </div>
                    </div>
                </div>

                @if (newBudget.Items != null && newBudget.Items.Any())
                {
                    <div class="mt-3">
                        <h6>Itens adicionados</h6>
                        <ul>
                            @foreach (var it in newBudget.Items)
                            {
                                <li>@GetCategoryName(it.CategoryId) - R$ @it.LimitAmount.ToString("F2")</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando orÃ§amentos...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (budgets != null && budgets.Any())
    {
        <div class="row g-4">
            @foreach (var budget in budgets)
            {
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">OrÃ§amento - @budget.Month</h5>
                            </div>

                            <div class="mb-4">
                                @if (budget.Items != null && budget.Items.Any())
                                {
                                    @foreach (var item in budget.Items)
                                    {
                                        <div class="mb-3">
                                            <h6 class="mb-2">@GetCategoryName(item.CategoryId)</h6>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-muted">Limite: R$ @item.LimitAmount.ToString("F2")</span>
                                                <span class="fw-bold">Gasto: R$ @item.SpentAmount.ToString("F2")</span>
                                            </div>
                                            <div class="progress" style="height: 25px;">
                                                @{
                                                    var percentage = item.LimitAmount > 0 ? (item.SpentAmount / item.LimitAmount) * 100 : 0;
                                                    var progressClass = percentage > 90 ? "bg-danger" : percentage > 75 ? "bg-warning" : "bg-success";
                                                }
                                                <div class="progress-bar @progressClass" role="progressbar" style="width: @percentage.ToString("F0")%;" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                    @percentage.ToString("F0")%
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-1">DisponÃ­vel: R$ @((item.LimitAmount - item.SpentAmount).ToString("F2"))</small>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Sem itens de orÃ§amento</p>
                                }
                            </div>

                            <div class="d-grid gap-2 mt-3">
                                <button class="btn btn-sm btn-warning" @onclick="() => BeginEditBudget(budget.Month)">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Deletar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Nenhum orÃ§amento encontrado. <a href="#" @onclick="ShowAddModal">Clique aqui para criar um.</a>
        </div>
    }
</div>

@code {
    private IEnumerable<Budget>? budgets;
    private bool isLoading = true;
    private string? errorMessage;

    // Add/create helpers
    private bool showAdd;
    private Budget newBudget = new Budget();
    private BudgetItem newItem = new BudgetItem();
    private string? addError;
    private IEnumerable<Category>? categoriesList;
    private Dictionary<string, string> categoriesDict = new();
    private string[] selectedCategoryIds = Array.Empty<string>();
    private string monthPicker;

    private void OnMonthChanged(ChangeEventArgs e)
    {
        monthPicker = e?.Value?.ToString() ?? string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadBudgets();
        categoriesList = await CategoryService.GetAllAsync(CategoryType.Expense);
        categoriesDict = categoriesList?.ToDictionary(c => c.Id, c => c.Name) ?? new Dictionary<string, string>();
        monthPicker = DateTime.UtcNow.ToString("yyyy-MM");
    }

    private async Task LoadBudgets()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            budgets = await BudgetService.GetAllAsync();
            if (budgets == null || !budgets.Any())
            {
                errorMessage = "Nenhum orÃ§amento disponÃ­vel.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar orÃ§amentos: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ShowAddModal()
    {
        // initialize form state and show the add UI
        newBudget = new Budget();
        newItem = new BudgetItem();
        addError = null;
        showAdd = true;
        // ensure UI updates
        await Task.Yield();
        StateHasChanged();
    }

    private void AddBudgetItem()
    {
        addError = null;
        if (selectedCategoryIds == null || !selectedCategoryIds.Any())
        {
            addError = "Selecione ao menos 1 categoria";
            return;
        }

        if (newBudget.Items == null)
            newBudget.Items = new List<BudgetItem>();

        foreach (var catId in selectedCategoryIds)
        {
            newBudget.Items.Add(new BudgetItem { CategoryId = catId, LimitAmount = newItem.LimitAmount });
        }

        // clear selection
        selectedCategoryIds = Array.Empty<string>();
        newItem = new BudgetItem();
    }

    private async Task CreateBudget()
    {
        try
        {
            // parse monthPicker into YYYY-MM string expected by model
            if (!string.IsNullOrEmpty(monthPicker))
            {
                newBudget.Month = monthPicker;
            }
            // map to CreateBudgetRequestDto
            var dto = new MoneyManager.Application.DTOs.Request.CreateBudgetRequestDto
            {
                Month = newBudget.Month,
                Items = new List<MoneyManager.Application.DTOs.Request.BudgetItemRequestDto>()
            };

            if (newBudget.Items != null)
            {
                foreach (var it in newBudget.Items)
                {
                    dto.Items.Add(new MoneyManager.Application.DTOs.Request.BudgetItemRequestDto
                    {
                        CategoryId = it.CategoryId,
                        LimitAmount = it.LimitAmount
                    });
                }
            }

            var created = await BudgetService.CreateAsync(dto);
            newBudget = new Budget();
            showAdd = false;
            await LoadBudgets();
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
    }

    private void CancelAdd()
    {
        showAdd = false;
        newBudget = new Budget();
        newItem = new BudgetItem();
        addError = null;
    }

    private async Task BeginEditBudget(string month)
    {
        try
        {
            var existing = await BudgetService.GetByIdAsync(month);
            if (existing != null)
            {
                newBudget = existing;
                monthPicker = existing.Month;
                showAdd = true;
                await Task.Yield();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
    }

    private string GetCategoryName(string categoryId)
    {
        return categoriesDict.TryGetValue(categoryId, out var name) ? name : "Categoria desconhecida";
    }
}
