@page "/budgets"
@using MoneyManager.Web.Services.Localization
@using MoneyManager.Domain.Entities
@using MoneyManager.Domain.Enums
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IBudgetService BudgetService
@inject ICategoryService CategoryService
@inject ILocalizationService Localization

<PageTitle>@Localization.Get("Budgets.PageTitle")</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h1 class="mb-0">
                    <i class="fas fa-calculator text-primary"></i> Orçamentos
                </h1>
                <button type="button" class="btn btn-primary" @onclick="ShowAddModal">
                    <i class="fas fa-plus"></i> Novo Orçamento
                </button>
            </div>
        </div>
    </div>

    @if (showAdd)
    {
        <!-- Modal de Novo/Editar Orçamento - UX Melhorado -->
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-@(isEditingBudget ? "edit" : "plus-circle")"></i>
                            @(isEditingBudget ? "Editar Orçamento" : Localization.Get("Budgets.NewBudget"))
                        </h5>
                        <button type="button" class="btn-close" @onclick="CancelAdd" disabled="@isBusy"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(addError))
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i> @addError
                            </div>
                        }

                        <!-- ETAPA 1: Escolher Mês -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="card-title mb-3">
                                    <span class="badge bg-primary me-2">1</span>
                                    Escolha o mês do orçamento
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">@Localization.Get("Budgets.Month")</label>
                                        <input type="month" class="form-control form-control-lg" value="@monthPicker" @onchange="OnMonthChanged" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Atalhos</label>
                                        <div class="d-grid">
                                            <button type="button" class="btn btn-outline-primary" @onclick="CopyFromPreviousMonth" disabled="@isBusy">
                                                <i class="fas fa-copy"></i> Copiar do Mês Anterior
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ETAPA 2: Adicionar Categorias -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6 class="card-title mb-3">
                                    <span class="badge bg-primary me-2">2</span>
                                    Adicione limites por categoria
                                </h6>
                                
                                @if (categoriesList != null && categoriesList.Any())
                                {
                                    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3 mb-3">
                                        @foreach (var category in categoriesList)
                                        {
                                            var isAdded = newBudget.Items?.Any(i => i.CategoryId == category.Id) ?? false;
                                            <div class="col">
                                                <div class="card h-100 @(isAdded ? "border-success" : "border-secondary") category-card" 
                                                     style="cursor: pointer; @(isAdded ? "background-color: #d1f4e0;" : "")" 
                                                     @onclick="() => ToggleCategorySelection(category.Id)">
                                                    <div class="card-body text-center p-2">
                                                        @if (isAdded)
                                                        {
                                                            <i class="fas fa-check-circle text-success"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fas fa-circle text-muted"></i>
                                                        }
                                                        <div class="small mt-1">@category.Name</div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i> Nenhuma categoria de despesa encontrada. 
                                        <a href="/categories">Crie categorias primeiro</a>.
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- ETAPA 3: Definir Valores -->
                        @if (newBudget.Items != null && newBudget.Items.Any())
                        {
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title mb-3">
                                        <span class="badge bg-primary me-2">3</span>
                                        Defina os limites de gastos
                                    </h6>
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle">
                                            <thead class="table-light">
                                                <tr>
                                                    <th style="width: 50%;">Categoria</th>
                                                    <th style="width: 35%;">Limite de Gasto</th>
                                                    <th style="width: 15%;" class="text-center">Ações</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int itemIndex = 0;
                                                }
                                                @foreach (var item in newBudget.Items.ToList())
                                                {
                                                    var currentIndex = itemIndex;
                                                    <tr>
                                                        <td>
                                                            <i class="fas fa-tag text-primary"></i>
                                                            <strong>@GetCategoryName(item.CategoryId)</strong>
                                                        </td>
                                                        <td>
                                                            <MoneyInput @bind-Value="item.LimitAmount" Placeholder="R$ 0,00" />
                                                        </td>
                                                        <td class="text-center">
                                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                                    @onclick="() => RemoveBudgetItem(currentIndex)" 
                                                                    disabled="@isBusy">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    itemIndex++;
                                                }
                                            </tbody>
                                            <tfoot class="table-light">
                                                <tr>
                                                    <td><strong>Total Planejado</strong></td>
                                                    <td colspan="2">
                                                        <strong class="text-primary">R$ @(newBudget.Items?.Sum(i => i.LimitAmount).ToString("N2"))</strong>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelAdd" disabled="@isBusy">
                            <i class="fas fa-times"></i> @Localization.Get("Common.Cancel")
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="CreateBudget" 
                                disabled="@(isBusy || newBudget.Items == null || !newBudget.Items.Any() || newBudget.Items.Any(i => i.LimitAmount <= 0))">
                            <i class="fas fa-save"></i> @(isEditingBudget ? Localization.Get("Common.Update") : Localization.Get("Common.Save"))
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando orçamentos...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (budgets != null && budgets.Any())
    {
        <div class="row g-4">
            @foreach (var budget in budgets)
            {
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">Orçamento - @budget.Month</h5>
                            </div>

                            <div class="mb-4">
                                @if (budget.Items != null && budget.Items.Any())
                                {
                                    @foreach (var item in budget.Items)
                                    {
                                        <div class="mb-3">
                                            <h6 class="mb-2">@GetCategoryName(item.CategoryId)</h6>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="text-muted">Limite: R$ @item.LimitAmount.ToString("F2")</span>
                                                <span class="fw-bold">Gasto: R$ @item.SpentAmount.ToString("F2")</span>
                                            </div>
                                            <div class="progress" style="height: 25px;">
                                                @{
                                                    var percentage = item.LimitAmount > 0 ? (item.SpentAmount / item.LimitAmount) * 100 : 0;
                                                    var progressClass = percentage > 90 ? "bg-danger" : percentage > 75 ? "bg-warning" : "bg-success";
                                                }
                                                <div class="progress-bar @progressClass" role="progressbar" style="width: @percentage.ToString("F0")%;" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                    @percentage.ToString("F0")%
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-1">Disponível: R$ @((item.LimitAmount - item.SpentAmount).ToString("F2"))</small>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Sem itens de orçamento</p>
                                }
                            </div>

                            <div class="d-grid gap-2 mt-3">
                                <button class="btn btn-sm btn-warning" @onclick="() => BeginEditBudget(budget.Month)">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Deletar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Nenhum orçamento encontrado. <a href="#" @onclick="ShowAddModal">Clique aqui para criar um.</a>
        </div>
    }
</div>

@code {
    private IEnumerable<Budget>? budgets;
    private bool isLoading = true;
    private string? errorMessage;

    // Add/create helpers
    private bool showAdd;
    private bool isBusy;
    private Budget newBudget = new Budget();
    private BudgetItem newItem = new BudgetItem();
    private string? addError;
    private IEnumerable<Category>? categoriesList;
    private Dictionary<string, string> categoriesDict = new();
    private string[] selectedCategoryIds = Array.Empty<string>();
    private string monthPicker;
    private string? editingBudgetMonth;
    private bool isEditingBudget => !string.IsNullOrEmpty(editingBudgetMonth);

    private void OnMonthChanged(ChangeEventArgs e)
    {
        monthPicker = e?.Value?.ToString() ?? string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadBudgets();
        categoriesList = await CategoryService.GetAllAsync(CategoryType.Expense);
        categoriesDict = categoriesList?.ToDictionary(c => c.Id, c => c.Name) ?? new Dictionary<string, string>();
        monthPicker = DateTime.UtcNow.ToString("yyyy-MM");
    }

    private async Task LoadBudgets()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            budgets = await BudgetService.GetAllAsync();
            if (budgets == null || !budgets.Any())
            {
                errorMessage = "Nenhum orçamento disponível.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar orçamentos: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ShowAddModal()
    {
        // initialize form state and show the add UI
        newBudget = new Budget();
        newItem = new BudgetItem();
        addError = null;
        editingBudgetMonth = null;
        showAdd = true;
        // ensure UI updates
        await Task.Yield();
        StateHasChanged();
    }

    private void ToggleCategorySelection(string categoryId)
    {
        if (newBudget.Items == null)
            newBudget.Items = new List<BudgetItem>();

        var existingItem = newBudget.Items.FirstOrDefault(i => i.CategoryId == categoryId);
        
        if (existingItem != null)
        {
            // Remove se já existe
            newBudget.Items.Remove(existingItem);
        }
        else
        {
            // Adiciona com valor padrão de R$ 500,00
            newBudget.Items.Add(new BudgetItem 
            { 
                CategoryId = categoryId, 
                LimitAmount = 500m 
            });
        }
        
        StateHasChanged();
    }

    private void RemoveBudgetItem(int index)
    {
        if (newBudget.Items != null && index >= 0 && index < newBudget.Items.Count)
        {
            newBudget.Items.RemoveAt(index);
            StateHasChanged();
        }
    }

    private async Task CopyFromPreviousMonth()
    {
        try
        {
            if (string.IsNullOrEmpty(monthPicker))
            {
                addError = "Selecione um mês primeiro";
                return;
            }

            // Calcula o mês anterior
            if (DateTime.TryParse(monthPicker + "-01", out var selectedDate))
            {
                var previousMonth = selectedDate.AddMonths(-1);
                var previousMonthString = previousMonth.ToString("yyyy-MM");

                // Tenta buscar orçamento do mês anterior
                var previousBudget = await BudgetService.GetByIdAsync(previousMonthString);
                
                if (previousBudget != null && previousBudget.Items != null && previousBudget.Items.Any())
                {
                    // Copia os itens do mês anterior
                    newBudget.Items = previousBudget.Items.Select(i => new BudgetItem
                    {
                        CategoryId = i.CategoryId,
                        LimitAmount = i.LimitAmount
                    }).ToList();
                    
                    StateHasChanged();
                }
                else
                {
                    addError = $"Nenhum orçamento encontrado para {previousMonth:MMMM/yyyy}";
                }
            }
        }
        catch (Exception ex)
        {
            addError = $"Erro ao copiar orçamento: {ex.Message}";
        }
    }

    private async Task CreateBudget()
    {
        addError = null;
        if (isBusy) return;
        isBusy = true;
        
        try
        {
            // parse monthPicker into YYYY-MM string expected by model
            if (!string.IsNullOrEmpty(monthPicker))
            {
                newBudget.Month = monthPicker;
            }
            // map to CreateBudgetRequestDto
            var dto = new MoneyManager.Application.DTOs.Request.CreateBudgetRequestDto
            {
                Month = newBudget.Month,
                Items = new List<MoneyManager.Application.DTOs.Request.BudgetItemRequestDto>()
            };

            if (newBudget.Items != null)
            {
                foreach (var it in newBudget.Items)
                {
                    dto.Items.Add(new MoneyManager.Application.DTOs.Request.BudgetItemRequestDto
                    {
                        CategoryId = it.CategoryId,
                        LimitAmount = it.LimitAmount
                    });
                }
            }

            var created = await BudgetService.CreateAsync(dto);
            newBudget = new Budget();
            editingBudgetMonth = null;
            showAdd = false;
            await LoadBudgets();
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private void CancelAdd()
    {
        if (isBusy) return;
        showAdd = false;
        newBudget = new Budget();
        newItem = new BudgetItem();
        addError = null;
        editingBudgetMonth = null;
    }

    private async Task BeginEditBudget(string month)
    {
        try
        {
            var existing = await BudgetService.GetByIdAsync(month);
            if (existing != null)
            {
                newBudget = existing;
                editingBudgetMonth = month;
                monthPicker = existing.Month;
                showAdd = true;
                await Task.Yield();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
    }

    private string GetCategoryName(string categoryId)
    {
        return categoriesDict.TryGetValue(categoryId, out var name) ? name : "Categoria desconhecida";
    }
}
