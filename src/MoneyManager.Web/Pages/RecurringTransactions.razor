@page "/recurring-transactions"
@using MoneyManager.Domain.Entities
@using MoneyManager.Domain.Enums
@using MoneyManager.Application.DTOs.Request
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IRecurringTransactionService RecurringTransactionService
@inject IAccountService AccountService
@inject ICategoryService CategoryService

<PageTitle>Transaçõeses Recorrentes - MoneyManager</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-repeat text-primary"></i> Transaçõeses Recorrentes
                </h1>
                <button class="btn btn-primary" @onclick="ShowAddModal">
                    <i class="fas fa-plus"></i> Nova Recorrência
                </button>
            </div>
        </div>
    </div>

    @if (showAdd)
    {
        <!-- Modal de Nova/Editar Recorrência -->
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-@(isEditing ? "edit" : "plus-circle")"></i> 
                            @(isEditing ? "Editar" : "Nova") Transação Recorrente
                        </h5>
                        <button type="button" class="btn-close" @onclick="CancelAdd"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(addError))
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i> @addError
                            </div>
                        }
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Descrição</label>
                                <input class="form-control" placeholder="Ex: Aluguel, Netflix, Salário" @bind="newRecurring.Description" />
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Tipo</label>
                                <select class="form-select" @bind="transactionType">
                                    <option value="Income">Receita</option>
                                    <option value="Expense">Despesa</option>
                                </select>
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Valor</label>
                                <MoneyInput @bind-Value="newRecurring.Amount" Placeholder="R$ 0,00" />
                            </div>
                            
                            <div class="col-md-4">
                                <label class="form-label">Frequência</label>
                                <select class="form-select" @bind="recurringFrequency">
                                    <option value="3">Mensal</option>
                                    <option value="1">Semanal</option>
                                    <option value="2">Quinzenal</option>
                                    <option value="4">Trimestral</option>
                                    <option value="5">Semestral</option>
                                    <option value="6">Anual</option>
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Conta</label>
                                <select class="form-select" @bind="newRecurring.AccountId">
                                    <option value="">-- Selecione uma conta --</option>
                                    @foreach (var account in accountsList)
                                    {
                                        <option value="@account.Id">@account.Name (@GetAccountTypeLabel(account.Type))</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Categoria</label>
                                <select class="form-select" @bind="newRecurring.CategoryId">
                                    <option value="">-- Selecione uma categoria --</option>
                                    @foreach (var category in categoriesList)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>
                            
                            @if (recurringFrequency == "3")
                            {
                                <div class="col-md-4">
                                    <label class="form-label">Dia do Mês</label>
                                    <input type="number" class="form-control" min="1" max="31" @bind="newRecurring.DayOfMonth" placeholder="Ex: 5" />
                                    <small class="text-muted">Dia em que ocorre todo mês</small>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Data de Início</label>
                                    <input type="date" class="form-control" @bind="startDateInput" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Data de Término (opcional)</label>
                                    <input type="date" class="form-control" @bind="endDateInput" />
                                    <small class="text-muted">Deixe vazio para indefinida</small>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <label class="form-label">Data de Início</label>
                                    <input type="date" class="form-control" @bind="startDateInput" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Data de Término (opcional)</label>
                                    <input type="date" class="form-control" @bind="endDateInput" />
                                    <small class="text-muted">Deixe vazio para indefinida</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelAdd">
                            <i class="fas fa-times"></i> Cancelar
                        </button>
                        @if (!isEditing)
                        {
                            <button type="button" class="btn btn-primary" @onclick="() => CreateRecurring(false)">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <button type="button" class="btn btn-success" @onclick="() => CreateRecurring(true)">
                                <i class="fas fa-plus"></i> Salvar e Adicionar Outra
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary" @onclick="() => CreateRecurring(false)">
                                <i class="fas fa-save"></i> Atualizar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando transaçõeses recorrentes...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (recurringTransactions != null && recurringTransactions.Any())
    {
        <div class="row mb-4">
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <small class="text-muted d-block">Total de recorrências</small>
                        <div class="d-flex justify-content-between align-items-baseline">
                            <h5 class="mb-0"><i class="fas fa-calculator text-primary"></i> Soma total</h5>
                            <h3 class="mb-0">R$ @GetRecurringNetTotal(recurringTransactions).ToString("N2")</h3>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted d-block">Receitas</small>
                            <div class="fw-bold text-success">R$ @GetRecurringIncomeTotal(recurringTransactions).ToString("N2")</div>
                            <small class="text-muted d-block mt-2">Despesas</small>
                            <div class="fw-bold text-danger">R$ @GetRecurringExpenseTotal(recurringTransactions).ToString("N2")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var recurring in recurringTransactions)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@recurring.Description</h5>
                                    <span class="badge @(recurring.Type == TransactionType.Income ? "bg-success" : "bg-danger")">
                                        @(recurring.Type == TransactionType.Income ? "Receita" : "Despesa")
                                    </span>
                                    @if (recurring.IsActive)
                                    {
                                        <span class="badge bg-primary ms-1">Ativa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary ms-1">Inativa</span>
                                    }
                                </div>
                                <h4 class="mb-0 @(recurring.Type == TransactionType.Income ? "text-success" : "text-danger")">
                                    R$ @recurring.Amount.ToString("N2")
                                </h4>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">
                                    <i class="fas fa-sync-alt"></i> @GetFrequencyText(recurring.Frequency)
                                </small>
                                <small class="text-muted d-block">
                                    <i class="fas fa-wallet"></i> @GetAccountName(recurring.AccountId)
                                </small>
                                <small class="text-muted d-block">
                                    <i class="fas fa-calendar"></i> Próxima: @recurring.NextOccurrenceDate.ToString("dd/MM/yyyy")
                                </small>
                                @if (recurring.LastProcessedDate.HasValue)
                                {
                                    <small class="text-muted d-block">
                                        <i class="fas fa-check"></i> Ãšltima: @recurring.LastProcessedDate.Value.ToString("dd/MM/yyyy")
                                    </small>
                                }
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-sm btn-warning" @onclick="@(() => EditRecurring(recurring.Id))">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="@(() => DeleteRecurring(recurring.Id))">
                                    <i class="fas fa-trash"></i> Deletar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Nenhuma transaçãoo recorrente encontrada.
            <a href="#" @onclick="ShowAddModal" @onclick:preventDefault>Clique aqui para criar uma.</a>
        </div>
    }
</div>

@code {
    private IEnumerable<RecurringTransaction>? recurringTransactions;
    private List<Account> accountsList = new();
    private List<Category> categoriesList = new();
    private bool isLoading = true;
    private string? errorMessage;
    private bool showAdd;
    private string? addError;
    private bool isEditing;
    private string? editingId;

    private CreateRecurringTransactionRequestDto newRecurring = new();
    private string transactionType = "Expense";
    private string recurringFrequency = "3";
    private DateTime? startDateInput = DateTime.Today;
    private DateTime? endDateInput;

    [Inject]
    private IJSRuntime? JSRuntime { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var accounts = await AccountService.GetAllAsync();
            accountsList = accounts.ToList();

            var categories = await CategoryService.GetAllAsync();
            categoriesList = categories.ToList();

            recurringTransactions = await RecurringTransactionService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar dados: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        newRecurring = new CreateRecurringTransactionRequestDto
        {
            StartDate = DateTime.Today,
            Frequency = RecurrenceFrequency.Monthly
        };
        transactionType = "Expense";
        recurringFrequency = "3";
        startDateInput = DateTime.Today;
        endDateInput = null;
        isEditing = false;
        editingId = null;
        addError = null;
        showAdd = true;
    }

    private async Task EditRecurring(string id)
    {
        try
        {
            var recurring = await RecurringTransactionService.GetByIdAsync(id);
            if (recurring != null)
            {
                newRecurring = new CreateRecurringTransactionRequestDto
                {
                    AccountId = recurring.AccountId,
                    CategoryId = recurring.CategoryId,
                    Type = recurring.Type,
                    Amount = recurring.Amount,
                    Description = recurring.Description,
                    Frequency = recurring.Frequency,
                    StartDate = recurring.StartDate,
                    EndDate = recurring.EndDate,
                    DayOfMonth = recurring.DayOfMonth,
                    Tags = recurring.Tags
                };
                transactionType = recurring.Type.ToString();
                recurringFrequency = ((int)recurring.Frequency).ToString();
                startDateInput = recurring.StartDate;
                endDateInput = recurring.EndDate;
                isEditing = true;
                editingId = id;
                showAdd = true;
            }
        }
        catch (Exception ex)
        {
            addError = $"Erro ao carregar recorrência: {ex.Message}";
        }
    }

    private async Task CreateRecurring(bool addAnother = false)
    {
        addError = null;

        try
        {
            if (string.IsNullOrEmpty(newRecurring.Description))
            {
                addError = "Descrição é obrigatória";
                return;
            }

            if (string.IsNullOrEmpty(newRecurring.AccountId))
            {
                addError = "Conta é obrigatória";
                return;
            }

            newRecurring.Type = transactionType == "Income" ? TransactionType.Income : TransactionType.Expense;
            newRecurring.Frequency = (RecurrenceFrequency)int.Parse(recurringFrequency);
            newRecurring.StartDate = startDateInput ?? DateTime.Today;
            newRecurring.EndDate = endDateInput;

            if (isEditing && !string.IsNullOrEmpty(editingId))
            {
                await RecurringTransactionService.UpdateAsync(editingId, newRecurring);
                showAdd = false;
                isEditing = false;
                editingId = null;
            }
            else
            {
                await RecurringTransactionService.CreateAsync(newRecurring);
                
                // Se "Salvar e adicionar outra", limpa o formulário mas mantém aberto
                if (addAnother)
                {
                    var previousAccountId = newRecurring.AccountId;
                    newRecurring = new CreateRecurringTransactionRequestDto
                    {
                        StartDate = DateTime.Today,
                        Frequency = RecurrenceFrequency.Monthly,
                        AccountId = previousAccountId // Mantém a conta selecionada
                    };
                    transactionType = "Expense";
                    recurringFrequency = "3";
                    startDateInput = DateTime.Today;
                    endDateInput = null;
                }
                else
                {
                    showAdd = false;
                }
            }

            await LoadData();
        }
        catch (Exception ex)
        {
            addError = $"Erro ao salvar: {ex.Message}";
        }
    }

    private void CancelAdd()
    {
        showAdd = false;
        newRecurring = new CreateRecurringTransactionRequestDto();
        isEditing = false;
        editingId = null;
        addError = null;
    }

    private async Task DeleteRecurring(string id)
    {
        if (JSRuntime != null && await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja deletar esta transaçãoo recorrente?"))
        {
            try
            {
                await RecurringTransactionService.DeleteAsync(id);
                await LoadData();
            }
            catch (Exception ex)
            {
                errorMessage = $"Erro ao deletar: {ex.Message}";
            }
        }
    }

    private string GetFrequencyText(RecurrenceFrequency frequency)
    {
        return frequency switch
        {
            RecurrenceFrequency.Daily => "DiÃ¡ria",
            RecurrenceFrequency.Weekly => "Semanal",
            RecurrenceFrequency.Biweekly => "Quinzenal",
            RecurrenceFrequency.Monthly => "Mensal",
            RecurrenceFrequency.Quarterly => "Trimestral",
            RecurrenceFrequency.Semiannual => "Semestral",
            RecurrenceFrequency.Annual => "Anual",
            _ => "Desconhecida"
        };
    }

    private static decimal GetRecurringIncomeTotal(IEnumerable<RecurringTransaction> list) =>
        list.Where(r => r.Type == TransactionType.Income).Sum(r => r.Amount);

    private static decimal GetRecurringExpenseTotal(IEnumerable<RecurringTransaction> list) =>
        list.Where(r => r.Type == TransactionType.Expense).Sum(r => r.Amount);

    // Total líquido (receitas - despesas), Ãºtil para entendimento do impacto mensal/recorrente.
    private static decimal GetRecurringNetTotal(IEnumerable<RecurringTransaction> list) =>
        GetRecurringIncomeTotal(list) - GetRecurringExpenseTotal(list);

    private string GetAccountName(string accountId)
    {
        if (string.IsNullOrEmpty(accountId))
            return "Sem conta";

        var account = accountsList.FirstOrDefault(a => a.Id == accountId);
        return account?.Name ?? "Conta desconhecida";
    }

    private static IEnumerable<Account> GetAccountsOrdered(List<Account> accounts)
    {
        if (accounts is null) return Enumerable.Empty<Account>();

        return accounts
            .OrderBy(a => GetAccountTypeSortKey(a.Type))
            .ThenBy(a => a.Name);
    }

    private static int GetAccountTypeSortKey(AccountType type)
    {
        return type switch
        {
            AccountType.Cash => 0,
            AccountType.Checking => 1,
            AccountType.Savings => 2,
            AccountType.CreditCard => 3,
            AccountType.Investment => 4,
            _ => 99
        };
    }

    private static string GetAccountTypeLabel(AccountType type)
    {
        return type switch
        {
            AccountType.Cash => "Dinheiro",
            AccountType.Checking => "Conta Corrente",
            AccountType.Savings => "Poupança",
            AccountType.CreditCard => "Cartão de crédito",
            AccountType.Investment => "Investimento",
            _ => type.ToString()
        };
    }
}

