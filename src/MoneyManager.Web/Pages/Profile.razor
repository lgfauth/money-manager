@page "/profile"
@using MoneyManager.Application.DTOs.Request
@using MoneyManager.Application.DTOs.Response
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IUserProfileService ProfileService
@inject NavigationManager Navigation

<PageTitle>Meu Perfil - MoneyManager</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">
                <i class="fas fa-user text-primary"></i> Meu Perfil
            </h1>
            <p class="text-muted">Gerencie suas informações pessoais e segurança</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Carregando perfil...</p>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @successMessage
                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
            </div>
        }

        <div class="row g-4">
            <!-- Informações do Perfil -->
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(profile.ProfilePicture))
                            {
                                <img src="@profile.ProfilePicture" alt="Profile" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                    <i class="fas fa-user fa-3x text-white"></i>
                                </div>
                            }
                        </div>
                        <h4>@(profile.FullName ?? profile.Name)</h4>
                        <p class="text-muted mb-3">@profile.Email</p>
                        <small class="text-muted">
                            <i class="fas fa-calendar"></i> Membro desde @profile.CreatedAt.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>

            <!-- Editar Informações Pessoais -->
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-id-card"></i> Informações Pessoais</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome de Usuário</label>
                                <input type="text" class="form-control" value="@profile.Name" disabled />
                                <small class="text-muted">Nome de usuário não pode ser alterado</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome Completo</label>
                                <input type="text" class="form-control" @bind="updateProfileRequest.FullName" placeholder="Digite seu nome completo" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <div class="input-group">
                                    <input type="email" class="form-control" value="@profile.Email" disabled />
                                    <button class="btn btn-outline-secondary" @onclick="ShowChangeEmail">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Telefone</label>
                                <input type="tel" class="form-control" @bind="updateProfileRequest.Phone" placeholder="(00) 00000-0000" />
                            </div>

                            <div class="col-12 mb-3">
                                <label class="form-label">URL da Foto de Perfil</label>
                                <input type="url" class="form-control" @bind="updateProfileRequest.ProfilePicture" placeholder="https://..." />
                                <small class="text-muted">Cole a URL de uma imagem pública</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" @onclick="UpdateProfile" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Salvando...</span>
                                }
                                else
                                {
                                    <span><i class="fas fa-save"></i> Salvar Alterações</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Alterar Senha -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-lock"></i> Segurança</h5>
                    </div>
                    <div class="card-body">
                        @if (!showChangePassword)
                        {
                            <p class="text-muted mb-3">Mantenha sua conta segura com uma senha forte</p>
                            <button class="btn btn-warning" @onclick="@(() => showChangePassword = true)">
                                <i class="fas fa-key"></i> Alterar Senha
                            </button>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Senha Atual</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.CurrentPassword" />
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Nova Senha</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.NewPassword" />
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Confirmar Nova Senha</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.ConfirmPassword" />
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="btn btn-success" @onclick="ChangePassword" disabled="@isChangingPassword">
                                    @if (isChangingPassword)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Alterando...</span>
                                    }
                                    else
                                    {
                                        <span><i class="fas fa-check"></i> Confirmar Alteração</span>
                                    }
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="@(() => { showChangePassword = false; ClearPasswordFields(); })">
                                    <i class="fas fa-times"></i> Cancelar
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Alterar Email -->
        @if (showChangeEmail)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="fas fa-envelope"></i> Alterar Email</h5>
                            <button type="button" class="btn-close" @onclick="@(() => showChangeEmail = false)"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Novo Email</label>
                                <input type="email" class="form-control" @bind="updateEmailRequest.NewEmail" placeholder="novo@email.com" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Senha Atual (para confirmar)</label>
                                <input type="password" class="form-control" @bind="updateEmailRequest.Password" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="@(() => showChangeEmail = false)">Cancelar</button>
                            <button type="button" class="btn btn-primary" @onclick="UpdateEmail" disabled="@isUpdatingEmail">
                                @if (isUpdatingEmail)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Atualizando...</span>
                                }
                                else
                                {
                                    <span>Confirmar</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isChangingPassword = false;
    private bool isUpdatingEmail = false;
    private bool showChangePassword = false;
    private bool showChangeEmail = false;
    private string? errorMessage;
    private string? successMessage;

    private UserProfileResponseDto profile = new();
    private UpdateProfileRequestDto updateProfileRequest = new();
    private ChangePasswordRequestDto changePasswordRequest = new();
    private UpdateEmailRequestDto updateEmailRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            profile = await ProfileService.GetProfileAsync();
            updateProfileRequest = new UpdateProfileRequestDto
            {
                FullName = profile.FullName,
                Phone = profile.Phone,
                ProfilePicture = profile.ProfilePicture
            };
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar perfil: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateProfile()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            profile = await ProfileService.UpdateProfileAsync(updateProfileRequest);
            successMessage = "Perfil atualizado com sucesso!";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao atualizar perfil: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ChangePassword()
    {
        isChangingPassword = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(changePasswordRequest.CurrentPassword))
            {
                errorMessage = "Digite a senha atual";
                return;
            }

            if (string.IsNullOrWhiteSpace(changePasswordRequest.NewPassword))
            {
                errorMessage = "Digite a nova senha";
                return;
            }

            if (changePasswordRequest.NewPassword != changePasswordRequest.ConfirmPassword)
            {
                errorMessage = "As senhas não coincidem";
                return;
            }

            if (changePasswordRequest.NewPassword.Length < 6)
            {
                errorMessage = "A senha deve ter pelo menos 6 caracteres";
                return;
            }

            await ProfileService.ChangePasswordAsync(changePasswordRequest);
            successMessage = "Senha alterada com sucesso!";
            showChangePassword = false;
            ClearPasswordFields();
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Senha atual incorreta";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao alterar senha: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isChangingPassword = false;
        }
    }

    private async Task UpdateEmail()
    {
        isUpdatingEmail = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(updateEmailRequest.NewEmail))
            {
                errorMessage = "Digite o novo email";
                return;
            }

            if (string.IsNullOrWhiteSpace(updateEmailRequest.Password))
            {
                errorMessage = "Digite sua senha para confirmar";
                return;
            }

            profile = await ProfileService.UpdateEmailAsync(updateEmailRequest);
            successMessage = "Email atualizado com sucesso!";
            showChangeEmail = false;
            updateEmailRequest = new UpdateEmailRequestDto();
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Senha incorreta";
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao atualizar email: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isUpdatingEmail = false;
        }
    }

    private void ShowChangeEmail()
    {
        updateEmailRequest = new UpdateEmailRequestDto();
        showChangeEmail = true;
    }

    private void ClearPasswordFields()
    {
        changePasswordRequest = new ChangePasswordRequestDto();
    }
}
