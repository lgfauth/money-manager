@page "/profile"
@using MoneyManager.Web.Services.Localization
@using MoneyManager.Application.DTOs.Request
@using MoneyManager.Application.DTOs.Response
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IUserProfileService ProfileService
@inject ILocalizationService Localization
@inject NavigationManager Navigation
@inject ILocalizationService Localization

<PageTitle>@Localization.Get("Profile.Title") - MoneyManager</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">
                <i class="fas fa-user text-primary"></i> @Localization.Get("Profile.Title")
            </h1>
            <p class="text-muted">@Localization.Get("Profile.Subtitle")</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">@Localization.Get("Profile.Loading")</p>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @successMessage
                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @errorMessage
                <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
            </div>
        }

        <div class="row g-4">
        <!-- Informações do Perfil -->
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(profile.ProfilePicture))
                            {
                                <img src="@profile.ProfilePicture" alt="Profile" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                    <i class="fas fa-user fa-3x text-white"></i>
                                </div>
                            }
                        </div>
                        <h4>@(profile.FullName ?? profile.Name)</h4>
                        <p class="text-muted mb-3">@profile.Email</p>
                        <small class="text-muted">
                            <i class="fas fa-calendar"></i> Membro desde @profile.CreatedAt.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>

            <!-- Editar Informações Pessoais -->
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-id-card"></i> @Localization.Get("Profile.PersonalInfo")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localization.Get("Profile.Username")</label>
                                <input type="text" class="form-control" value="@profile.Name" disabled />
                                <small class="text-muted">@Localization.Get("Profile.UsernameHelp")</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localization.Get("Profile.FullName")</label>
                                <input type="text" class="form-control" @bind="updateProfileRequest.FullName" placeholder="@Localization.Get("Profile.FullNamePlaceholder")" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <div class="input-group">
                                    <input type="email" class="form-control" value="@profile.Email" disabled />
                                    <button class="btn btn-outline-secondary" @onclick="ShowChangeEmail">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localization.Get("Profile.Phone")</label>
                                <input type="tel" class="form-control" @bind="updateProfileRequest.Phone" placeholder="@Localization.Get("Profile.PhonePlaceholder")" />
                            </div>

                            <div class="col-12 mb-3">
                                <label class="form-label">@Localization.Get("Profile.ProfilePictureLabel")</label>
                                <input type="url" class="form-control" @bind="updateProfileRequest.ProfilePicture" placeholder="@Localization.Get("Profile.ProfilePicturePlaceholder")" />
                                <small class="text-muted">@Localization.Get("Profile.ProfilePictureHelp")</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" @onclick="UpdateProfile" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Salvando...</span>
                                }
                                else
                                {
                                    <span><i class="fas fa-save"></i> @Localization.Get("Profile.SaveChanges")</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Alterar Senha -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-lock"></i> @Localization.Get("Profile.Security")</h5>
                    </div>
                    <div class="card-body">
                        @if (!showChangePassword)
                        {
                            <p class="text-muted mb-3">@Localization.Get("Profile.SecurityDescription")</p>
                            <button class="btn btn-warning" @onclick="@(() => showChangePassword = true)">
                                <i class="fas fa-key"></i> @Localization.Get("Profile.ChangePassword")
                            </button>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">@Localization.Get("Profile.CurrentPassword")</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.CurrentPassword" />
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">@Localization.Get("Profile.NewPassword")</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.NewPassword" />
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">@Localization.Get("Profile.ConfirmNewPassword")</label>
                                    <input type="password" class="form-control" @bind="changePasswordRequest.ConfirmPassword" />
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="btn btn-success" @onclick="ChangePassword" disabled="@isChangingPassword">
                                    @if (isChangingPassword)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Alterando...</span>
                                    }
                                    else
                                    {
                                        <span><i class="fas fa-check"></i> @Localization.Get("Profile.ConfirmPasswordChange")</span>
                                    }
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="@(() => { showChangePassword = false; ClearPasswordFields(); })">
                                    <i class="fas fa-times"></i> @Localization.Get("Profile.Cancel")
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Alterar Email -->
        @if (showChangeEmail)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="fas fa-envelope"></i> @Localization.Get("Profile.ChangeEmail")</h5>
                            <button type="button" class="btn-close" @onclick="@(() => showChangeEmail = false)"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">@Localization.Get("Profile.NewEmail")</label>
                                <input type="email" class="form-control" @bind="updateEmailRequest.NewEmail" placeholder="@Localization.Get("Profile.NewEmailPlaceholder")" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">@Localization.Get("Profile.PasswordToConfirm")</label>
                                <input type="password" class="form-control" @bind="updateEmailRequest.Password" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="@(() => showChangeEmail = false)">@Localization.Get("Profile.Cancel")</button>
                            <button type="button" class="btn btn-primary" @onclick="UpdateEmail" disabled="@isUpdatingEmail">
                                @if (isUpdatingEmail)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>@Localization.Get("Profile.Updating")</span>
                                }
                                else
                                {
                                    <span>@Localization.Get("Profile.Confirm")</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Seção PERIGOSA: Exclusão de Conta (LGPD) -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-exclamation-triangle"></i> @Localization.Get("Profile.DangerZone")
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6 class="text-danger fw-bold">Excluir Conta Permanentemente</h6>
                        <p class="text-muted mb-3">
                            Esta aÃƒÂ§ÃƒÂ£o ÃƒÂ© <strong>IRREVERSÃƒÂVEL</strong>. Todos os seus dados serÃƒÂ£o permanentemente excluÃƒÂ­dos, incluindo:
                        </p>
                        <ul class="text-muted mb-4">
                            <li>@Localization.Get("Profile.DeleteItem1")</li>
                            <li>@Localization.Get("Profile.DeleteItem2")</li>
                            <li>@Localization.Get("Profile.DeleteItem3")</li>
                            <li>@Localization.Get("Profile.DeleteItem4")</li>
                            <li>@Localization.Get("Profile.DeleteItem5")</li>
                            <li>@Localization.Get("Profile.DeleteItem6")</li>
                        </ul>

                        @if (!showDeleteConfirmation)
                        {
                            <button class="btn btn-outline-danger" @onclick="ShowDeleteConfirmation">
                                <i class="fas fa-trash-alt"></i> @Localization.Get("Profile.WantToDelete")
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <h6 class="alert-heading">
                                    <i class="fas fa-exclamation-circle"></i> ConfirmaÃƒÂ§ÃƒÂ£o de ExclusÃƒÂ£o
                                </h6>
                                <p><strong>Esta aÃƒÂ§ÃƒÂ£o NÃƒÆ’O pode ser desfeita!</strong></p>
                                <p class="mb-3">VocÃƒÂª possui <strong class="fs-5">@dataCount</strong> registros que serÃƒÂ£o permanentemente excluÃƒÂ­dos.</p>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Localization.Get("Profile.EnterPassword")</label>
                                    <input type="password" class="form-control" @bind="deletePassword" placeholder="@Localization.Get("Profile.PasswordPlaceholder")" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Localization.Get("Profile.TypeToConfirm")</label>
                                    <input type="text" class="form-control" @bind="deleteConfirmationText" placeholder="@Localization.Get("Profile.DeleteConfirmText")" />
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" @bind="understandConsequences" id="understandCheck" />
                                    <label class="form-check-label" for="understandCheck">
                                        @Localization.Get("Profile.UnderstandConsequences")
                                    </label>
                                </div>

                                <div class="d-flex gap-2">
                                    <button class="btn btn-danger" @onclick="DeleteAccount" disabled="@(!CanDeleteAccount() || isDeletingAccount)">
                                    @if (isDeletingAccount)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>@Localization.Get("Profile.Deleting")</span>
                                    }
                                    else
                                    {
                                        <span><i class="fas fa-trash-alt"></i> @Localization.Get("Profile.ConfirmDeletion")</span>
                                    }
                                    </button>
                                    <button class="btn btn-secondary" @onclick="@(() => { showDeleteConfirmation = false; ClearDeleteFields(); })">
                                        <i class="fas fa-times"></i> @Localization.Get("Profile.Cancel")
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Inject] private MoneyManager.Web.Services.IAccountDeletionService AccountDeletionService { get; set; } = default!;
    [Inject] private NavigationManager Nav { get; set; } = default!;
    [Inject] private AuthenticationStateProvider AuthStateProvider { get; set; } = default!;

    private bool isLoading = true;
    private bool isSaving = false;
    private bool isChangingPassword = false;
    private bool isUpdatingEmail = false;
    private bool isDeletingAccount = false;
    private bool showChangePassword = false;
    private bool showChangeEmail = false;
    private bool showDeleteConfirmation = false;
    private bool understandConsequences = false;
    private string? errorMessage;
    private string? successMessage;
    private string deletePassword = string.Empty;
    private string deleteConfirmationText = string.Empty;
    private int dataCount = 0;

    private UserProfileResponseDto profile = new();
    private UpdateProfileRequestDto updateProfileRequest = new();
    private ChangePasswordRequestDto changePasswordRequest = new();
    private UpdateEmailRequestDto updateEmailRequest = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            profile = await ProfileService.GetProfileAsync();
            updateProfileRequest = new UpdateProfileRequestDto
            {
                FullName = profile.FullName,
                Phone = profile.Phone,
                ProfilePicture = profile.ProfilePicture
            };
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar perfil: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateProfile()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            profile = await ProfileService.UpdateProfileAsync(updateProfileRequest);
            successMessage = "Perfil atualizado com sucesso!";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao atualizar perfil: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ChangePassword()
    {
        isChangingPassword = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(changePasswordRequest.CurrentPassword))
            {
                errorMessage = "Digite a senha atual";
                return;
            }

            if (string.IsNullOrWhiteSpace(changePasswordRequest.NewPassword))
            {
                errorMessage = "Digite a nova senha";
                return;
            }

            if (changePasswordRequest.NewPassword != changePasswordRequest.ConfirmPassword)
            {
            errorMessage = "As senhas não coincidem";
                return;
            }

            if (changePasswordRequest.NewPassword.Length < 6)
            {
                errorMessage = "A senha deve ter pelo menos 6 caracteres";
                return;
            }

            await ProfileService.ChangePasswordAsync(changePasswordRequest);
            successMessage = "Senha alterada com sucesso!";
            showChangePassword = false;
            ClearPasswordFields();
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Senha atual incorreta";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao alterar senha: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isChangingPassword = false;
        }
    }

    private async Task UpdateEmail()
    {
        isUpdatingEmail = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (string.IsNullOrWhiteSpace(updateEmailRequest.NewEmail))
            {
                errorMessage = "Digite o novo email";
                return;
            }

            if (string.IsNullOrWhiteSpace(updateEmailRequest.Password))
            {
                errorMessage = "Digite sua senha para confirmar";
                return;
            }

            profile = await ProfileService.UpdateEmailAsync(updateEmailRequest);
            successMessage = "Email atualizado com sucesso!";
            showChangeEmail = false;
            updateEmailRequest = new UpdateEmailRequestDto();
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Senha incorreta";
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao atualizar email: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isUpdatingEmail = false;
        }
    }

    private void ShowChangeEmail()
    {
        updateEmailRequest = new UpdateEmailRequestDto();
        showChangeEmail = true;
    }

    private void ClearPasswordFields()
    {
        changePasswordRequest = new ChangePasswordRequestDto();
    }

    private async Task ShowDeleteConfirmation()
    {
        try
        {
            dataCount = await AccountDeletionService.GetDataCountAsync();
            showDeleteConfirmation = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar informações: {ex.Message}";
        }
    }

    private bool CanDeleteAccount()
    {
        return !string.IsNullOrWhiteSpace(deletePassword) &&
               deleteConfirmationText == "DELETAR MINHA CONTA" &&
               understandConsequences;
    }

    private void ClearDeleteFields()
    {
        deletePassword = string.Empty;
        deleteConfirmationText = string.Empty;
        understandConsequences = false;
        showDeleteConfirmation = false;
    }

    private async Task DeleteAccount()
    {
        if (!CanDeleteAccount())
        {
            errorMessage = "Por favor, preencha todos os campos corretamente";
            return;
        }

        isDeletingAccount = true;
        errorMessage = null;

        try
        {
            var success = await AccountDeletionService.DeleteAccountAsync(deletePassword, deleteConfirmationText);

            if (success)
            {
                // Faz logout
                if (AuthStateProvider is MoneyManager.Web.Services.CustomAuthenticationStateProvider customAuthProvider)
                {
                    await customAuthProvider.MarkUserAsLoggedOut();
                }

                // Redireciona para pÃƒÂ¡gina de confirmaÃƒÂ§ÃƒÂ£o
                Nav.NavigateTo("/account-deleted", true);
            }
            else
            {
                errorMessage = "Erro ao excluir conta. Verifique sua senha e tente novamente.";
            }
        }
        catch (UnauthorizedAccessException)
        {
            errorMessage = "Senha incorreta. Por favor, verifique e tente novamente.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao excluir conta: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isDeletingAccount = false;
        }
    }
}
