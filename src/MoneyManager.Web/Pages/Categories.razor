@page "/categories"
@using MoneyManager.Web.Services.Localization
@using MoneyManager.Domain.Entities
@using MoneyManager.Domain.Enums
@using MoneyManager.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject ICategoryService CategoryService
@inject ILocalizationService Localization
@inject NavigationManager Navigation

<PageTitle>@Localization.Get("Categories.PageTitle")</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h1 class="mb-0">
                    <i class="fas fa-tags text-primary"></i> Categorias
                </h1>
                <button class="btn btn-primary" @onclick="ShowAddModal">
                    <i class="fas fa-plus"></i> @Localization.Get("Categories.NewCategory")
                </button>
            </div>
        </div>
    </div>

    @if (showAdd)
    {
        <!-- Modal de Nova/Editar Categoria -->
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-@(isEditingCategory ? "edit" : "plus-circle")"></i>
                            @(isEditingCategory ? "Editar Categoria" : Localization.Get("Categories.NewCategory"))
                        </h5>
                        <button type="button" class="btn-close" @onclick="CancelAdd" disabled="@isBusy"></button>
                    </div>
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(addError))
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i> @addError
                            </div>
                        }
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">@Localization.Get("Categories.Name")</label>
                                <input class="form-control" placeholder="Digite o nome" @bind="newCategory.Name" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Localization.Get("Categories.Type")</label>
                                <select class="form-select" @bind="categoryType">
                                    <option value="Income">@Localization.Get("Categories.Income")</option>
                                    <option value="Expense">@Localization.Get("Categories.Expense")</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">@Localization.Get("Categories.Color")</label>
                                <ColorPicker @bind-SelectedColor="newCategory.Color" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelAdd" disabled="@isBusy">
                            <i class="fas fa-times"></i> @Localization.Get("Common.Cancel")
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="CreateCategory" disabled="@isBusy">
                            <i class="fas fa-save"></i> @(isEditingCategory ? Localization.Get("Common.Update") : Localization.Get("Common.Save"))
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">@Localization.Get("Categories.Loading")</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (categories != null && categories.Any())
    {
        <!-- Grid Responsivo: 2 cols (mobile), 3 cols (tablet), 4 cols (desktop), 6 cols (xl) -->
        <div class="row g-3">
            @foreach (var category in categories)
            {
                var isIncome = category.Type == CategoryType.Income;
                var typeBadgeClass = isIncome ? "bg-success" : "bg-danger";
                var typeIcon = isIncome ? "arrow-up" : "arrow-down";
                
                <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                    <div class="card shadow-sm h-100 category-item-card">
                        <div class="card-body p-3">
                            <!-- Header: Cor + Nome + Tipo -->
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <span class="category-color-badge" 
                                      style="background-color: @category.Color;"
                                      title="@category.Color">
                                </span>
                                <div class="flex-grow-1 min-w-0">
                                    <h6 class="mb-0 text-truncate fw-semibold" title="@category.Name">
                                        @category.Name
                                    </h6>
                                </div>
                            </div>
                            
                            <!-- Info: Badge Tipo + Código Hex -->
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <span class="badge @typeBadgeClass">
                                    <i class="fas fa-@typeIcon"></i> @GetTypeLabel(category.Type)
                                </span>
                                <small class="text-muted font-monospace">@category.Color.ToUpper()</small>
                            </div>
                            
                            <!-- Ações: Botões Inline -->
                            <div class="d-flex gap-1">
                                <button class="btn btn-sm btn-outline-warning flex-fill" 
                                        @onclick="@(() => EditCategory(category.Id))"
                                        title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger flex-fill" 
                                        @onclick="@(() => DeleteCategory(category.Id))"
                                        title="Deletar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> @Localization.Get("Categories.NoCategories"). <a href="#" @onclick="ShowAddModal">Clique aqui para criar uma.</a>
        </div>
    }
</div>

@code {
    private IEnumerable<Category>? categories;
    private bool isLoading = true;
    private string? errorMessage;
    
    [Inject]
    private IJSRuntime? JSRuntime { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            categories = await CategoryService.GetAllAsync();
            if (categories == null || !categories.Any())
            {
                errorMessage = "Nenhuma categoria disponÃƒÂ­vel.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar categorias: {ex.Message}";
            Console.WriteLine($"Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        newCategory = new Category { Color = "#667eea" };
        editingCategoryId = null;
        addError = null;
        showAdd = true;
    }

    private string? editingCategoryId;
    private bool isEditingCategory => !string.IsNullOrEmpty(editingCategoryId);

    private async Task EditCategory(string categoryId)
    {
        try
        {
            var cat = await CategoryService.GetByIdAsync(categoryId);
            if (cat != null)
            {
                newCategory = cat;
                editingCategoryId = categoryId;
                showAdd = true;
            }
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
    }

    private bool showAdd;
    private bool isBusy;
    private Category newCategory = new Category();
    private string? addError;
    private string categoryType
    {
        get => newCategory.Type == CategoryType.Income ? "Income" : "Expense";
        set
        {
            if (value == "Income")
                newCategory.Type = CategoryType.Income;
            else
                newCategory.Type = CategoryType.Expense;
        }
    }

    private async Task CreateCategory()
    {
        addError = null;
        if (isBusy) return;
        isBusy = true;
        
        try
        {
            if (isEditingCategory && editingCategoryId != null)
            {
                await CategoryService.UpdateAsync(editingCategoryId, newCategory);
            }
            else
            {
                await CategoryService.CreateAsync(newCategory);
            }

            newCategory = new Category { Color = "#667eea" };
            editingCategoryId = null;
            showAdd = false;
            await LoadCategories();
        }
        catch (Exception ex)
        {
            addError = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private void CancelAdd()
    {
        if (isBusy) return;
        showAdd = false;
        newCategory = new Category { Color = "#667eea" };
        editingCategoryId = null;
        addError = null;
    }

    private async Task DeleteCategory(string categoryId)
    {
        if (JSRuntime != null && await JSRuntime.InvokeAsync<bool>("confirm", "Tem certeza que deseja deletar esta categoria?"))
        {
            try
            {
                await CategoryService.DeleteAsync(categoryId);
                await LoadCategories();
            }
            catch (Exception ex)
            {
                errorMessage = $"Erro ao deletar categoria: {ex.Message}";
            }
        }
    }

    private string GetTypeLabel(CategoryType type)
    {
        return type == CategoryType.Income 
            ? Localization.Get("Categories.Income") 
            : Localization.Get("Categories.Expense");
    }
}
