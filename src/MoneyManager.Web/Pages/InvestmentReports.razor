@page "/investments/reports"
@using MoneyManager.Application.DTOs.Response
@using MoneyManager.Domain.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager Navigation
@inject HttpClient Http

<PageTitle>Relatórios de Investimentos</PageTitle>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h1 class="mb-0">
                    <i class="fas fa-file-invoice text-primary"></i> Relatórios de Investimentos
                </h1>
                <a href="/investments" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Voltar para Ativos
                </a>
            </div>
        </div>
    </div>

    <!-- Seleção de Ano -->
    <div class="row mb-4">
        <div class="col-12 col-md-3">
            <label class="form-label fw-bold">Ano de Referência</label>
            <select class="form-select" @bind="selectedYear">
                @for (int y = DateTime.Now.Year; y >= 2020; y--)
                {
                    <option value="@y">@y</option>
                }
            </select>
        </div>
        <div class="col-12 col-md-9 d-flex align-items-end">
            <button class="btn btn-primary" @onclick="LoadReports" disabled="@isLoading">
                <i class="fas fa-sync-alt"></i> Gerar Relatórios
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3 text-muted">Gerando relatórios...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
    }
    else if (salesReport != null || yieldsReport != null)
    {
        <!-- Abas -->
        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "sales" ? "active" : "")" 
                        @onclick="@(() => activeTab = "sales")" 
                        type="button">
                    <i class="fas fa-file-invoice-dollar"></i> Vendas (IR)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "yields" ? "active" : "")" 
                        @onclick="@(() => activeTab = "yields")" 
                        type="button">
                    <i class="fas fa-coins"></i> Rendimentos
                </button>
            </li>
        </ul>

        <!-- Conteúdo das Abas -->
        <div class="tab-content">
            <!-- Aba: Vendas para IR -->
            @if (activeTab == "sales" && salesReport != null)
            {
                <div class="tab-pane fade show active">
                    <!-- Cards de Resumo -->
                    <div class="row g-3 mb-4">
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Total Vendido</small>
                                    <h4 class="mb-0 text-primary">R$ @salesReport.TotalSold.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Lucro Total</small>
                                    <h4 class="mb-0 text-success">R$ @salesReport.TotalProfit.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Prejuízo Total</small>
                                    <h4 class="mb-0 text-danger">R$ @salesReport.TotalLoss.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">IR Devido (est.)</small>
                                    <h4 class="mb-0 text-warning">R$ @salesReport.EstimatedTaxDue.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabela de Vendas -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Vendas Realizadas em @selectedYear</h5>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-outline-secondary" disabled>
                                    <i class="fas fa-file-pdf"></i> PDF
                                </button>
                                <button class="btn btn-sm btn-outline-success" disabled>
                                    <i class="fas fa-file-excel"></i> Excel
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            @if (salesReport.Sales.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Data</th>
                                                <th>Ativo</th>
                                                <th class="text-end">Qtd</th>
                                                <th class="text-end">Preço Médio</th>
                                                <th class="text-end">Preço Venda</th>
                                                <th class="text-end">Total Venda</th>
                                                <th class="text-end">Lucro/Prejuízo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sale in salesReport.Sales)
                                            {
                                                <tr>
                                                    <td>@sale.Date.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <div class="fw-bold">@sale.AssetName</div>
                                                        @if (!string.IsNullOrEmpty(sale.Ticker))
                                                        {
                                                            <small class="text-muted">@sale.Ticker</small>
                                                        }
                                                    </td>
                                                    <td class="text-end">@sale.Quantity.ToString("N2")</td>
                                                    <td class="text-end">R$ @sale.AveragePurchasePrice.ToString("N2")</td>
                                                    <td class="text-end">R$ @sale.SalePrice.ToString("N2")</td>
                                                    <td class="text-end fw-bold">R$ @sale.TotalSaleValue.ToString("N2")</td>
                                                    <td class="text-end">
                                                        <span class="fw-bold @(sale.ProfitLoss >= 0 ? "text-success" : "text-danger")">
                                                            @(sale.ProfitLoss >= 0 ? "+" : "")R$ @sale.ProfitLoss.ToString("N2")
                                                            <br />
                                                            <small>(@sale.ProfitLossPercentage.ToString("N2")%)</small>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="p-4 text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="mb-0">Nenhuma venda registrada em @selectedYear</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Nota sobre IR -->
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i> <strong>Nota:</strong> O valor de IR devido é uma estimativa simplificada (15% sobre lucro). 
                        Consulte um contador para cálculo preciso e considere regras específicas para cada tipo de ativo.
                    </div>
                </div>
            }

            <!-- Aba: Rendimentos -->
            @if (activeTab == "yields" && yieldsReport != null)
            {
                <div class="tab-pane fade show active">
                    <!-- Cards de Resumo -->
                    <div class="row g-3 mb-4">
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Total de Rendimentos</small>
                                    <h4 class="mb-0 text-success">R$ @yieldsReport.TotalYields.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Dividendos</small>
                                    <h4 class="mb-0 text-primary">R$ @yieldsReport.TotalDividends.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">Juros</small>
                                    <h4 class="mb-0 text-info">R$ @yieldsReport.TotalInterest.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-muted">FIIs (Aluguéis)</small>
                                    <h4 class="mb-0 text-warning">R$ @yieldsReport.TotalRealEstateYields.ToString("N2")</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabela de Rendimentos -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Rendimentos Recebidos em @selectedYear</h5>
                            <button class="btn btn-sm btn-outline-success" disabled>
                                <i class="fas fa-file-excel"></i> Excel
                            </button>
                        </div>
                        <div class="card-body p-0">
                            @if (yieldsReport.Yields.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Data</th>
                                                <th>Ativo</th>
                                                <th>Tipo</th>
                                                <th class="text-end">Valor</th>
                                                <th>Descrição</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var yieldItem in yieldsReport.Yields)
                                            {
                                                <tr>
                                                    <td>@yieldItem.Date.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <div class="fw-bold">@yieldItem.AssetName</div>
                                                        @if (!string.IsNullOrEmpty(yieldItem.Ticker))
                                                        {
                                                            <small class="text-muted">@yieldItem.Ticker</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge @GetYieldTypeBadgeClass(yieldItem.YieldType)">
                                                            @GetYieldTypeName(yieldItem.YieldType)
                                                        </span>
                                                    </td>
                                                    <td class="text-end fw-bold text-success">R$ @yieldItem.Amount.ToString("N2")</td>
                                                    <td>
                                                        <small class="text-muted">@yieldItem.Description</small>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="p-4 text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="mb-0">Nenhum rendimento registrado em @selectedYear</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card shadow-sm border-0 text-center py-5">
            <div class="card-body">
                <i class="fas fa-file-invoice fa-4x text-muted mb-3"></i>
                <h4>Selecione um ano e clique em "Gerar Relatórios"</h4>
                <p class="text-muted">Os relatórios serão gerados com base nas suas transações de investimento</p>
            </div>
        </div>
    }
</div>

@code {
    private int selectedYear = DateTime.Now.Year;
    private string activeTab = "sales";
    private bool isLoading = false;
    private string? errorMessage;

    private InvestmentSalesReportDto? salesReport;
    private InvestmentYieldsReportDto? yieldsReport;

    private async Task LoadReports()
    {
        isLoading = true;
        errorMessage = null;
        salesReport = null;
        yieldsReport = null;

        try
        {
            // Carregar relatório de vendas
            var salesResponse = await Http.GetAsync($"api/investment-reports/sales/{selectedYear}");
            if (salesResponse.IsSuccessStatusCode)
            {
                salesReport = await salesResponse.Content.ReadFromJsonAsync<InvestmentSalesReportDto>();
            }

            // Carregar relatório de rendimentos
            var yieldsResponse = await Http.GetAsync($"api/investment-reports/yields/{selectedYear}");
            if (yieldsResponse.IsSuccessStatusCode)
            {
                yieldsReport = await yieldsResponse.Content.ReadFromJsonAsync<InvestmentYieldsReportDto>();
            }

            if (salesReport == null && yieldsReport == null)
            {
                errorMessage = "Erro ao carregar relatórios. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar relatórios: {ex.Message}";
            Console.WriteLine($"[Reports] Erro: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetYieldTypeName(InvestmentTransactionType type)
    {
        return type switch
        {
            InvestmentTransactionType.Dividend => "Dividendo",
            InvestmentTransactionType.Interest => "Juros",
            InvestmentTransactionType.YieldPayment => "Aluguel/Rendimento",
            _ => type.ToString()
        };
    }

    private string GetYieldTypeBadgeClass(InvestmentTransactionType type)
    {
        return type switch
        {
            InvestmentTransactionType.Dividend => "bg-primary",
            InvestmentTransactionType.Interest => "bg-info",
            InvestmentTransactionType.YieldPayment => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}
