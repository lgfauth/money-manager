@using MoneyManager.Application.DTOs.Request
@using MoneyManager.Application.DTOs.Response

@* Modal para registrar compra de ativo *@

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle"></i> Comprar Ativo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Cancel" disabled="@isBusy"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <i class="fas fa-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                    }

                    <div class="row g-3">
                        <!-- Seletor de Ativo -->
                        @if (SelectedAsset == null && Assets != null && Assets.Any())
                        {
                            <div class="col-12">
                                <InvestmentAssetSelector 
                                    Assets="@Assets" 
                                    @bind-SelectedAssetId="selectedAssetId"
                                    OnAssetSelected="@HandleAssetSelected" />
                            </div>
                        }
                        else if (SelectedAsset != null)
                        {
                            <!-- Informações do Ativo Selecionado -->
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="mb-2">
                                            <AssetTypeIcon AssetType="@SelectedAsset.AssetType" />
                                            <strong class="ms-2">@SelectedAsset.Name</strong>
                                            @if (!string.IsNullOrEmpty(SelectedAsset.Ticker))
                                            {
                                                <span class="text-muted">(@SelectedAsset.Ticker)</span>
                                            }
                                        </h6>
                                        <div class="row g-2">
                                            <div class="col-4">
                                                <small class="text-muted d-block">Quantidade Atual</small>
                                                <strong>@SelectedAsset.Quantity.ToString("N2")</strong>
                                            </div>
                                            <div class="col-4">
                                                <small class="text-muted d-block">Preço Médio</small>
                                                <strong>R$ @SelectedAsset.AveragePurchasePrice.ToString("N2")</strong>
                                            </div>
                                            <div class="col-4">
                                                <small class="text-muted d-block">Total Investido</small>
                                                <strong>R$ @SelectedAsset.TotalInvested.ToString("N2")</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Quantidade -->
                        <div class="col-md-6">
                            <label class="form-label">Quantidade <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="request.Quantity" 
                                   step="0.01" min="0.01" placeholder="0,00" />
                        </div>

                        <!-- Preço Unitário -->
                        <div class="col-md-6">
                            <label class="form-label">Preço Unitário <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" class="form-control" @bind="request.Price" 
                                       step="0.01" min="0.01" placeholder="0,00" />
                            </div>
                        </div>

                        <!-- Taxa/Corretagem -->
                        <div class="col-md-6">
                            <label class="form-label">Taxa/Corretagem</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" class="form-control" @bind="request.Fees" 
                                       step="0.01" min="0" placeholder="0,00" />
                            </div>
                        </div>

                        <!-- Data -->
                        <div class="col-md-6">
                            <label class="form-label">Data da Compra</label>
                            <input type="date" class="form-control" @bind="request.Date" />
                        </div>

                        <!-- Descrição -->
                        <div class="col-12">
                            <label class="form-label">Descrição</label>
                            <textarea class="form-control" @bind="request.Description" 
                                      rows="2" placeholder="Observações sobre a compra..."></textarea>
                        </div>
                    </div>

                    <!-- Cálculos em Tempo Real -->
                    @if (request.Quantity > 0 && request.Price > 0)
                    {
                        var subtotal = request.Quantity * request.Price;
                        var totalWithFees = subtotal + request.Fees;

                        <div class="card mt-3 border-primary">
                            <div class="card-header bg-primary text-white py-2">
                                <small><i class="fas fa-calculator"></i> Simulação da Compra</small>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Subtotal</small>
                                        <h6 class="mb-0">R$ @subtotal.ToString("N2")</h6>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Taxas</small>
                                        <h6 class="mb-0">R$ @request.Fees.ToString("N2")</h6>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Total a Investir</small>
                                        <h6 class="mb-0 text-primary">R$ @totalWithFees.ToString("N2")</h6>
                                    </div>

                                    @if (SelectedAsset != null)
                                    {
                                        var currentTotal = SelectedAsset.TotalInvested;
                                        var newTotal = currentTotal + totalWithFees;
                                        var currentQty = SelectedAsset.Quantity;
                                        var newQty = currentQty + request.Quantity;
                                        var newAvgPrice = newTotal / newQty;

                                        <div class="col-12"><hr class="my-2" /></div>

                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Nova Quantidade</small>
                                            <h6 class="mb-0">@newQty.ToString("N2")</h6>
                                            <small class="text-success">+@request.Quantity.ToString("N2")</small>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Novo Preço Médio</small>
                                            <h6 class="mb-0">R$ @newAvgPrice.ToString("N2")</h6>
                                            @if (newAvgPrice != SelectedAsset.AveragePurchasePrice)
                                            {
                                                var diff = newAvgPrice - SelectedAsset.AveragePurchasePrice;
                                                <small class="@(diff >= 0 ? "text-danger" : "text-success")">
                                                    @(diff >= 0 ? "+" : "")@diff.ToString("N2")
                                                </small>
                                            }
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Novo Total Investido</small>
                                            <h6 class="mb-0 text-primary">R$ @newTotal.ToString("N2")</h6>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isBusy">
                        <i class="fas fa-times"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="ConfirmBuy" disabled="@isBusy">
                        @if (isBusy)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        else
                        {
                            <i class="fas fa-shopping-cart"></i>
                        }
                        Confirmar Compra
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public InvestmentAssetResponseDto? SelectedAsset { get; set; }

    [Parameter]
    public IEnumerable<InvestmentAssetResponseDto>? Assets { get; set; }

    [Parameter]
    public EventCallback OnSuccess { get; set; }

    private BuyAssetRequestDto request = new();
    private string? selectedAssetId;
    private bool isBusy = false;
    private string? errorMessage;

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            request = new BuyAssetRequestDto
            {
                Date = DateTime.Today,
                Fees = 0
            };

            if (SelectedAsset != null)
            {
                selectedAssetId = SelectedAsset.Id;
            }

            errorMessage = null;
        }
    }

    private void HandleAssetSelected(string? assetId)
    {
        if (!string.IsNullOrEmpty(assetId) && Assets != null)
        {
            SelectedAsset = Assets.FirstOrDefault(a => a.Id == assetId);
        }
    }

    private async Task ConfirmBuy()
    {
        if (isBusy) return;

        errorMessage = null;

        // Validações
        if (SelectedAsset == null)
        {
            errorMessage = "Selecione um ativo.";
            return;
        }

        if (request.Quantity <= 0)
        {
            errorMessage = "A quantidade deve ser maior que zero.";
            return;
        }

        if (request.Price <= 0)
        {
            errorMessage = "O preço deve ser maior que zero.";
            return;
        }

        isBusy = true;

        try
        {
            await OnSuccess.InvokeAsync();
            await CloseModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro: {ex.Message}";
        }
        finally
        {
            isBusy = false;
        }
    }

    private async Task Cancel()
    {
        if (isBusy) return;
        await CloseModal();
    }

    private async Task CloseModal()
    {
        IsVisible = false;
        await IsVisibleChanged.InvokeAsync(IsVisible);
        errorMessage = null;
        selectedAssetId = null;
    }

    public BuyAssetRequestDto GetRequest() => request;
    public string? GetSelectedAssetId() => selectedAssetId ?? SelectedAsset?.Id;
}
